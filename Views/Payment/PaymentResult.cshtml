@page
@model PD_Store.Views.Payment.PaymentResult
@{
    ViewData["Title"] = "PaymentResult";
}

<div class="max-w-xl mx-auto text-center mt-16 p-6 bg-white rounded shadow">
    <h1 class="text-2xl font-bold mb-4">
        @if (ViewBag.IsSuccess)
        {
            <span class="text-green-600"> Thanh toán thành công!</span>
        }
        else
        {
            <span class="text-red-600"> Thanh toán thất bại</span>
        }
    </h1>

    <p class="text-gray-600">Mã giao dịch: <strong>@ViewBag.OrderId</strong></p>
    <p class="text-gray-600 mb-4">Số tiền: <strong>@ViewBag.Amount.ToString("N0") ₫</strong></p>
    <p class="text-gray-700 font-medium">@ViewBag.Message</p>

    <a href="/" class="mt-6 inline-block px-6 py-2 bg-green-700 text-white rounded hover:bg-green-800 transition">
        Quay lại trang chủ
    </a>
</div>