@model PD_Store.ViewModels.Auth.RegisterRequestVM
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fuild h-100vh flex items-center justify-center" style="height: 80vh; background-color: rgba(255, 228, 196, 0.493);">
    <div class="w-full max-w-4xl bg-white shadow-xl rounded-lg overflow-hidden flex flex-col lg:flex-row">
        
        <!-- Bên trái: hình ảnh -->
        <div class="hidden lg:flex lg:w-1/2 bg-cover bg-center" style="background-image: url('/img/Banner-product-v1.png');">
        </div>

        <!-- Bên phải: form đăng ký -->
        <div class="w-full lg:w-1/2 px-8 py-12">
            <h2 class="text-3xl font-bold text-green-700 mb-6">Tạo tài khoản Resuga</h2>

            <form action="/Auth/Register"  method="post" class="space-y-5">
                @Html.AntiForgeryToken()

                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1 text-left">Tên đăng nhập</label>
                    <input asp-for="UserName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required />
                    <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1 text-left">Email</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1 text-left">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1 text-left">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>

                <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md transition">
                    <i class="fa-solid fa-user-plus mr-2"></i>Đăng ký
                </button>
            </form>

            <p class="mt-6 text-sm text-center text-gray-600">
                Đã có tài khoản?
                <a href="/auth/index" class="text-green-600 font-medium hover:underline">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
      var errorJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.ErrorMessage); // xử lý escape
    <script>
    document.addEventListener('DOMContentLoaded', function () {
            const errorMessage = @Html.Raw(errorJson);

            // Hiện SweetAlert
            Swal.fire({
                icon: 'error',
                title: 'Đăng ký thất bại',
                text: errorMessage,
            });

            // Gọi Toast nếu muốn
            if (typeof showToast === "function") {
                showToast(errorMessage);
            }
        });
    </script>
}

@if (!string.IsNullOrEmpty(ViewBag.Succeeded))
{
      var succeededJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.Succeeded); // xử lý escape
    <script>
    document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Đăng ký thành công',
                text: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.SuccessMessage)),
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@ViewBag.RedirectUrl';
                }
            });
        });
    </script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
