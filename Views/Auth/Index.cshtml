@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fuild h-100vh flex items-center justify-center b" style="height: 80vh; background-color: rgba(255, 228, 196, 0.493);">
    <div class="w-full max-w-7xl bg-white shadow-xl rounded-lg overflow-hidden flex flex-col lg:flex-row" style="height: 100%;">  
    
    <!-- Bên trái: hình ảnh thương hiệu -->
    <div class="hidden lg:flex lg:w-1/2 bg-cover bg-center" style="background-image: url('/img/Banner-product-v1.png');">
      <!-- Thay bằng ảnh sản phẩm cách âm, mía, thiên nhiên -->
    </div>

    <!-- Bên phải: form đăng nhập -->
    <div class="w-full lg:w-1/2 px-8 py-12">
      <h2 class="text-3xl font-bold text-green-700 mb-6">Đăng nhập vào Resuga</h2>
      <form action="/Auth/Login" method="post" class="space-y-5">
      @Html.AntiForgeryToken()
        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1 text-left">Tên đăng nhập</label>
          <input type="text" name="UserName" placeholder="Mời nhập tên đăng nhập"
                 class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required>
        </div>

        <!-- Mật khẩu -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1 text-left ">Mật khẩu</label>
          <input type="password" name="Password" placeholder="••••••••"   autocomplete="current-password"
                 class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" required>
        </div>

        <!-- Ghi nhớ + Quên mật khẩu -->
        <div class="flex items-center justify-between text-sm">
          <label class="flex items-center space-x-2">
            <input type="checkbox" name="RememberMe" class="form-checkbox text-green-600" />
            <span>Ghi nhớ tôi</span>
          </label>
          <a href="#" class="text-green-600 hover:underline">Quên mật khẩu?</a>
        </div>

        <!-- Submit -->
        <button type="submit"
                class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md transition">
          <i class="fa-solid fa-right-to-bracket mr-2"></i>Đăng nhập
        </button>
      </form>

      <!-- Hoặc đăng ký -->
      <p class="mt-6 text-sm text-center text-gray-600">
        Chưa có tài khoản?
        <a href="/auth/register" class="text-green-600 font-medium hover:underline">Đăng ký ngay</a>
      </p>
    </div>
<div id="toast" class="fixed top-4 right-4 z-50 bg-red-500 text-white px-4 py-2 rounded shadow-md transition opacity-0 pointer-events-none"></div>

  </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
      var errorJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.ErrorMessage); // xử lý escape
    <script>
    document.addEventListener('DOMContentLoaded', function () {
            const errorMessage = @Html.Raw(errorJson);

            // Hiện SweetAlert
            Swal.fire({
                icon: 'error',
                title: 'Đăng nhập thất bại',
                text: errorMessage,
            });

            // Gọi Toast nếu muốn
            if (typeof showToast === "function") {
                showToast(errorMessage);
            }
        });
    </script>
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["SuccessMessage"] != null)
{
      var succeededJson = System.Text.Json.JsonSerializer.Serialize(TempData["SuccessMessage"]); // xử lý escape
    <script>
    document.addEventListener('DOMContentLoaded', function () {
            const SuccessMessage = @Html.Raw(succeededJson);
            Swal.fire({
              title: 'Đăng nhập thành công!',
              text: 'Đang chuyển hướng...',
              icon: 'success',
              showConfirmButton: true,
              confirmButtonText: 'Chuyển ngay',
              timer: 5000,
              timerProgressBar: true
            }).then(() => {
              window.location.href = '@TempData["RedirectUrl"]';
            });

                if (typeof showToast === "function") {
                showToast(errorMessage);
            }
            });
        });
    </script>
}
}


